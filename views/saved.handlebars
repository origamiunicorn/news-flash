<header>
    {{> nav/save-block}}
</header>

<div class="parallax-container center valign-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s12 white-text">
                <h1 style="font-family: 'Bitter';">Mongo Scraper</h1>
                <h3 style="font-family: 'Bitter';">National Public Radio Edition</h3>
            </div>
        </div>
    </div>
    <div class="parallax">
        <img src="/assets/images/newsbackground.jpg">
    </div>
</div>

<main>
    <div class="container body-container">
        <div id="modalnotes" class="modal">
            <div class="modal-content">
                <h4>Article Notes</h4>
                <p>A bunch of text</p>
                <div class="divider"></div>
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="title" type="text" class="validate">
                                <label for="password">Title</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="body" class="materialize-textarea"></textarea>
                                <label for="body">Note</label>
                            </div>
                        </div>
                        <div class="center-align">
                            <button class="btn waves-effect waves-light center-align" type="submit" name="action">Save
                                Note
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
            </div>
        </div>

        {{#if articlesDocuments}}
        {{#each articlesDocuments}}
        <div class="row" data-id="{{this.id}}">
            <div class="col s12">
                <h4>
                    {{this.title}}
                </h4>
            </div>
            <div class="col s12">
                <blockquote>
                    {{this.teaser}}
                </blockquote>
            </div>
            <div class="col s6">
                <h6>
                    <a href="{{this.link}}">Read full article...</a>
                </h6>
            </div>
            <div class="col s6">
                <button class="btn waves-effect red lighten-1 right" id="delete" data-id="{{this.id}}">Delete
                    <i class="material-icons right">close</i>
                </button>

                <button class="btn modal-trigger waves-effect green lighten-1 right paddingbutton" id="note"
                    data-target="modalnotes" data-id="{{this.id}}">Add/Review Notes
                    <i class="material-icons left">check_box</i>
                </button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="row">
            <div class="col s12">
                <h4>
                    You have yet to save any articles. Why not scrape now?
                </h4>
            </div>
        </div>
        {{/if}}
    </div>
</main>